.row.questions
  .col-md-6
    %h2 Questions
  .col-md-6.text-right
    = link_to 'Create new question', new_teachers_question_path, class: 'btn btn-success'
%br
%table.table
  - @questions.each do |question|
    %tr
      %td
        %strong= question.title
        = question.text
        %br
        = link_to "Show answers", "#", class: "show-answers", 'data-id': question.id
        %ul.answers
      %td= link_to 'Show', teachers_question_path(question), class: 'btn btn-success'
      %td= link_to 'Edit', edit_teachers_question_path(question), class: 'btn btn-default'
      %td= link_to 'Destroy', teachers_question_path(question), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' }