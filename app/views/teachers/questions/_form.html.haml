= form_for [:teachers, @question] do |form|
  - if @question.errors.any?
    #error_explanation
      %h2
        = pluralize(@question.errors.count, "error")
        prohibited
        this question from being saved:
      %ul
        - @question.errors.full_messages.each do |msg|
          %li= msg
  %p
    = form.label :title
    %br/
    = form.text_field :title
    %br/
    = form.label :text
    %br/
    = form.text_area :text
    %br/
    = form.submit