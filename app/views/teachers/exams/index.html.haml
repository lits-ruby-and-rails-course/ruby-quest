.row.questions
  .col-md-6
    %h2 Exams
  .col-md-6.text-right
    = link_to 'Create new exam', new_teachers_exam_path, class: 'btn btn-success'
%br
%table.table
  - @exams.each do |exam|
    %tr
      %td
        %strong= exam.title
        = exam.start_time
        = exam.end_time
      %td= link_to 'Show', teachers_exam_path(exam), class: 'btn btn-success'
      %td= link_to 'Edit', edit_teachers_exam_path(exam), class: 'btn btn-default'
      %td= link_to 'Destroy', teachers_exam_path(exam), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' }